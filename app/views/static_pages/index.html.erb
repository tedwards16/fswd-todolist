<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mt-4">To Do List</h1>
      <div class="row pt-2 pb-2 justify-content-between">
        <div class="col-10 pr-2 pl-0">
          <input type="text" class="form-control form" id="newTaskInput" placeholder="Task">
        </div>
        <div class="col-2 pl-0 text-right">
          <button class="btn btn-primary btn-block" id="addTaskButton">Add Task</button>
        </div>
      </div>
      <div class="row" id="tasks">
      </div>
    </div>
  </div>
</div>